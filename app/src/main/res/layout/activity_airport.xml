<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@color/blue_clear"
        android:layout_marginBottom="10dp"
        android:padding="0dp">
        <ImageView
            android:id="@+id/main_img_airport"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_local_airport_72"
            android:contentDescription="@string/main_menu_item_icon_airport"/>
        <TextView
            android:id="@+id/main_text_airport"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginVertical="0dp"
            android:text="@string/main_menu_item_airport"
            android:textSize="35sp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:shadowColor="#80000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:fontFamily="@font/montserrat_bold"/>
    </LinearLayout>

</LinearLayout>