<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginVertical="0dp"
        android:contentDescription="@string/airport_header_description"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:src="@drawable/airport"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp">
        <ImageView
            android:id="@+id/main_img_airport"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_local_airport_72"
            android:contentDescription="@string/main_menu_item_icon_airport"/>
        <TextView
            android:id="@+id/airport_text_airport"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginVertical="0dp"
            android:text="@string/main_menu_item_airport"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="0dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/airport_section_title_public_transport"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingVertical="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/airport_section_content_public_transport"
            android:textSize="15sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingVertical="10dp"
            android:background="@color/blue_clear"/>
    </LinearLayout>

</LinearLayout>